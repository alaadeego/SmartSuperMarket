<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageProduct"
        android:src="@drawable/pepsi"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/productName"
        android:textSize="30sp"
        android:layout_below="@+id/imageProduct"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Price"
        android:layout_below="@+id/productName"
        android:id="@+id/pricetxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:textSize="30sp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#BDBDBD"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/minusbutton"
            android:background="@drawable/minusbutton"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:textSize="20sp"
            android:id="@+id/Count"
            android:layout_marginRight="20dp"
                  android:layout_gravity="center_vertical"
             />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/pulsebutton"
            android:background="@drawable/plusbutton"
            android:layout_gravity="center_vertical"
            />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/addtocartbtn"
            android:background="@drawable/addtocart"
            android:layout_gravity="center_vertical|right"



            />


    </LinearLayout>
</RelativeLayout>